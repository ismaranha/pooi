#include <stdio.h>

#define MAX 50000 

int Ordena_Vetor(int fQtd_num, int fNum[]){
	int i,j,aux;

    for (i = 0; i < fQtd_num; i++)
    {
        for (j = 0; j < fQtd_num; j++)
        {
            if (fNum[i] < fNum[j])
            {
                aux = fNum[i];
                fNum[i] = fNum[j];
                fNum[j] = aux;
            }
        }
    }
 }
 
